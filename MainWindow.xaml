<Window x:Class="halozatvezerles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hálózatkezelés"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="20">
        <TextBlock Text="Internetelérés"
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Dinamikusan feltöltött rács -->
        <UniformGrid x:Name="MachinesGrid"
                     Margin="0,20"
                     HorizontalAlignment="Center"/>

        <!-- Fix gombok -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Futtatás" Width="120" Height="40" Margin="10,0" Click="RunButton_Click"/>
            <Button Content="Összes Internet ki" Width="150" Height="40" Margin="10,0" Click="AllOffButton_Click"/>
            <Button Content="Összes Internet be" Width="150" Height="40" Margin="10,0" Click="AllOnButton_Click"/>
            <Button Content="Teszt" Width="120" Height="40" Margin="10,0" Click="TestButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
